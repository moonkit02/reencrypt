{
  "manifest_version": 3,
  "name": "RE:ncrypt",
  "version": "1.0",
  "description": "Will encrypt your password",
  "icons": {
    "16": "images/rencrypt_logo.png",
    "32": "images/rencrypt_logo.png",
    "48": "images/rencrypt_logo.png",
    "128": "images/rencrypt_logo.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting"
  ]
}